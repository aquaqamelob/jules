{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["texliveSmall"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "hypercorn main:app --bind \"[::]:$PORT\"",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}