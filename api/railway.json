{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["wget"],
          "cmds": [
            "wget -qO- https://yihui.org/tinytex/install-unx.sh | sh",
            "echo 'export PATH=\"/root/.TinyTeX/bin/x86_64-linux:${PATH}\"' >> $HOME/.bashrc"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "hypercorn main:app --bind \"[::]:$PORT\"",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}